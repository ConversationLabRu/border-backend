                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Report"
                ],
                "summary": "Создать новый отчет",
                "operationId": "2fa6b45bbd6bc7430bf030cae4c41696",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "border_crossing_id",
                                    "transport_id",
                                    "user_id",
                                    "checkpoint_entry",
                                    "checkpoint_exit"
                                ],
                                "properties": {
                                    "border_crossing_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "transport_id": {
                                        "type": "integer",
                                        "example": 2
                                    },
                                    "user_id": {
                                        "type": "integer",
                                        "example": 3
                                    },
                                    "checkpoint_queue": {
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2024-07-01T08:00:00Z"
                                    },
                                    "checkpoint_entry": {
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2024-07-01T09:00:00Z"
                                    },
                                    "checkpoint_exit": {
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2024-07-01T10:00:00Z"
                                    },
                                    "comment": {
                                        "type": "string",
                                        "example": "Sample comment"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Report Created Successfully"
                    },
                    "422": {
                        "description": "Ошибка если Entity не прошел валидацию",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The transport id field is required."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
