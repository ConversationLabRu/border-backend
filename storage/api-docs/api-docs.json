                                    "checkpoint_entry": {
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2024-07-01T09:00:00Z"
                                    },
                                    "checkpoint_exit": {
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2024-07-01T10:00:00Z"
                                    },
                                    "comment": {
                                        "type": "string",
                                        "example": "Sample comment"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Report Created Successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "border_crossing_id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "transport_id": {
                                            "type": "integer",
                                            "example": 2
                                        },
                                        "user_id": {
                                            "type": "integer",
                                            "example": 3
                                        },
                                        "checkpoint_queue": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2024-07-01T08:00:00Z"
                                        },
                                        "checkpoint_entry": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2024-07-01T09:00:00Z"
                                        },
                                        "checkpoint_exit": {
                                            "type": "string",
