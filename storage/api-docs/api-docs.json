        "/api/directions/borderCrossing/reports": {
            "get": {
                "tags": [
                    "Report"
                ],
                "summary": "Получение всех отчетов погран-перехода",
                "operationId": "650562ca1644f2c5585234f6f270dcc6",
                "responses": {
                    "200": {
                        "description": "Request Successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/AllReportDTO"
                                    }
